<%- include('includes/head') %>
    <div class="warpper">
        <form action="/register/register" method="POST" class="registerForm">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            <h1>Register</h1>
            <div class="input-box">
                <input type="text" name="username" placeholder="Username" autocomplete="off" required>
                <i class="bi bi-person-fill"></i>
            </div>
            <div class="input-box">
                <input type="text" name="email" placeholder="Email" autocomplete="off" required class="email">
                <i class="bi bi-envelope-fill"></i>
            </div>
        
            <div class="input-box">
                <input type="password" name="password" placeholder="Password" autocomplete="off" required class="password" id="password1">
                <i class="bi bi-lock-fill" id="password_icon"></i>
            </div>
            <div class="input-box">
                <input type="password" name="repeatPassword" placeholder="Repeat Password" autocomplete="off" required class="password" id="password2">
                <i class="bi bi-lock-fill" id="repeat_password_icon"></i>
                <span class="span">*As senhas n√£o se coincidem</span>
            </div>

            <button type="submit" class="btn">Register</button>

            <div class="register-link">
                <p>Tem conta? <a href="/login">Login</a></p>
            </div>
        </form>
    </div>
<%- include('includes/footer-register') %>
